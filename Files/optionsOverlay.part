            <div><input type="checkbox" name="chatEnabled" id="chatEnabled" checked></div>

            <div><label for="owncolour" title="the colour of your cursor and the accent colour of the website">Accent Colour:</label></div>
            <div><input type="color" name="owncolour" id="owncolour" value="#ff79c6"></div>
