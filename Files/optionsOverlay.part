            <div><select name="theme" id="theme">
                <option value="dracula" title="The default dark theme" selected>Dracula</option>
                <option value="cherry" title="A colorful light theme">Cherry</option>
                <option value="light" title="The default light theme">Light</option>
            </select></div>
            <div><label for="showOthers" title="show others' cursors on the control pages">Show Others' Cursors:</label></div>
            <div><input type="checkbox" name="showOthers" id="showOthers" checked></div>

